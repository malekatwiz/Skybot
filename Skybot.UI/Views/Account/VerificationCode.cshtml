@model VerificationCodeModel
@{
    ViewData["Title"] = "Verification Code";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Verification Code</h1>

<div class="col-md-6 mx-auto">
    <div class="card card-body">
        <form asp-action="VerifyCode" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <input type="text" asp-for="Code" required="required" placeholder="validation code" class="form-control" />
                </div>
                <input type="hidden" asp-for="PhoneNumber" value= "@Model.PhoneNumber"/>
            </fieldset>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Verify" />
        </form>
    </div>
</div>